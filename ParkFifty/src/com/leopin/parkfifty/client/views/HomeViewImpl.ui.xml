<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.leopin.parkfifty.client.ui">

	<ui:style>
		.groupTitle {
			border: 2px solid #35AECF;
			font-size: 14pt;
			color:#35AECF;
			margin-top:5px;
		}
	</ui:style>


	<ui:with field='res'
		type='com.leopin.parkfifty.client.resources.AppStyles' />

	<g:HTMLPanel addStyleNames="{res.style.floatR}">
	
		<fieldset class="{style.groupTitle}">
			<legend>Sign up for an Account</legend>

			<g:FlowPanel>
				<c:CompanyWidget ui:field="uiCompanyWidget" />
			</g:FlowPanel>
			<g:FlowPanel styleName="{res.style.navbar}">
				<g:Button addStyleNames="{res.style.button}" ui:field="uiContinue">Continue</g:Button>
			</g:FlowPanel>

		</fieldset>
		
	</g:HTMLPanel>

</ui:UiBinder> 