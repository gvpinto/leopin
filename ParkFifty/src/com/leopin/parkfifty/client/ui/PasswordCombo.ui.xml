<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='com.leopin.parkfifty.client.resources.AppStyles'/>

	<ui:style>
		.textBoxCombo {
			width: 450px;
		}
		
		.textBoxCombo label {
			display: inline-block;
			width: 150px;
			text-align: right;
			padding-right: 5px;
		}
		
		.textBoxCombo input {
			border-color: #35aecf;
			border-style: solid;
			border-width: 1px;
			padding: 3px;
			margin: 5px 0;
			font-size: 100%;
		}
		
		.textBoxCombo input.error {
			border-color: #FE2727;
			border-width: 1px;
		}
		
		.textBoxCombo input:focus {
			background-color: #FBFF88;
		}
		
		.textBoxCombo span {
			position: absolute;
			width: 150px;
			background-color: #FFF;
			padding: 2px 5px 2px 5px;
			margin-left: 20px;
			z-index: 999;
			border: 1px solid #35AECF;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.textBoxCombo}">
		<label ui:field="uiLabel"></label>
		<g:PasswordTextBox ui:field="uiTextBox" styleName="{res.style.textBox}" />
		<g:InlineLabel ui:field="uiHelpText"></g:InlineLabel>
	</g:HTMLPanel>
	
</ui:UiBinder> 