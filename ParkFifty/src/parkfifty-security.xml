	<global-method-security secured-annotations="enabled" />
	<!-- <global-method-security pre-post-annotations="enabled" /> -->
	
	
	<!-- <http pattern="/resources/**" security="none"/>
	<http pattern="/login.html" security="none" /> -->
	
	<http auto-config='true' use-expressions="true" entry-point-ref="authEntryPoint">
		<intercept-url pattern="/admin/company" access="permitAll"/>
		<intercept-url pattern="/_ah/**" access="permitAll"/>
		<intercept-url pattern="/**" access="hasAnyRole('USER','ADMIN','SUPER_ADMIN','OWNER')" />
		<form-login authentication-failure-handler-ref="authFailureHandler" authentication-success-handler-ref="authSuccessHandler"/>
	</http>


